---
import Layout from "@/layouts/Layout.astro";
import { projects } from "@/utils/data";

// Astro component for the bento grid layout
---

<Layout>
  <main class="lg:px-48">
    <div
      class="grid grid-cols-1 md:grid-cols-3 gap-4 p-4 rounded-3xl border border-gray-700 bg-gray-800/30 backdrop-blur-sm"
    >
      <div
        class="bg-gray-800/80 rounded-2xl p-6 flex flex-col justify-between border border-gray-700 overflow-hidden"
      >
        <div class="mb-3">
          <div class="mb-4 w-full h-2/3 flex items-center">
            <img
              src={projects[0].image}
              alt="Project Image"
              class="h-full w-full rounded-lg"
              loading="lazy"
              decoding="async"
            />
          </div>
          <h3 class="text-xl font-bold mb-2">{projects[0].title}</h3>
          <p class="text-sm text-gray-400">
            {projects[0].description}
          </p>
        </div>
        <button
          class="bg-gray-700/80 hover:bg-gray-600 text-sm py-2 px-4 rounded-lg inline-flex items-center w-fit"
        >
          Templates
        </button>
      </div>

      <!-- UI Kits: Bridging Design and Code -->
      <div
        class="bg-gray-800/80 rounded-2xl p-6 flex flex-col justify-between border border-gray-700 md:col-span-2 overflow-hidden"
      >
        <div>
          <h3 class="text-xl font-bold mb-2">
            {projects[1].title}
          </h3>
          <p class="text-sm text-gray-400 mb-4">
            {projects[1].description}
          </p>
          <button
            class="bg-gray-700/80 hover:bg-gray-600 text-sm py-2 px-4 rounded-lg inline-flex items-center w-fit mb-4"
          >
            Documentation
          </button>
        </div>
        <div
          class="relative w-full h-32 bg-gray-700/50 rounded-xl overflow-hidden"
        >
          <img
            src={projects[1].image}
            alt="Project Image"
            class="absolute inset-0 w-full h-full object-cover rounded-xl"
            loading="lazy"
            decoding="async"
          />
        </div>
      </div>

      <!-- The Anatomy of Effective Design Systems -->
      <div
        class="bg-gray-800/80 rounded-2xl p-6 flex flex-col justify-between border border-gray-700 md:col-span-2 overflow-hidden relative"
      >
        <div
          class="relative w-full h-32 bg-gray-700/50 rounded-xl overflow-hidden"
        >
          <img
            src={projects[1].image}
            alt="Project Image"
            class="absolute inset-0 w-full h-full object-cover rounded-xl"
            loading="lazy"
            decoding="async"
          />
        </div>
        <div>
          <h3 class="text-xl font-bold mb-2">
            {projects[2].title}
          </h3>
          <p class="text-sm text-gray-400 mb-4">
            {projects[2].description}
          </p>
          <button
            class="bg-gray-700/80 hover:bg-gray-600 text-sm py-2 px-4 rounded-lg inline-flex items-center w-fit"
          >
            Components
          </button>
        </div>
      </div>

      <!-- Strategies in Component Design -->
      <div
        class="bg-gray-800/80 rounded-2xl p-6 flex flex-col justify-between border border-gray-700 overflow-hidden"
      >
        <div>
          <h3 class="text-xl font-bold mb-2">{projects[3].title}</h3>
          <p class="text-sm text-gray-400 mb-4">
            {projects[3].description}
          </p>
          <button
            class="bg-gray-700/80 hover:bg-gray-600 text-sm py-2 px-4 rounded-lg inline-flex items-center w-fit mb-4"
          >
            Start course

          </button>
        </div>
        <div class="bg-gray-700/500 grid gap-2">
          <img
          src={projects[3].image}
          alt="Project Image"
          class="w-full h-full object-cover rounded-lg"
          loading="lazy"
          decoding="async"
        />
        </div>
      </div>
    </div>
  </main>
</Layout>
