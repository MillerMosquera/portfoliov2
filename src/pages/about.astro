                <div>
                    <h2 class="text-3xl font-bold mb-8">Skills</h2>
                    <div class="">
                        {
                            skills.map((skill) => (
                                <div class="flex justify-between items-center mb-4">
                                    <div class="flex ">
                                        <h3 class="text-xl">
                                            {skill.text}
                                        </h3>
               
