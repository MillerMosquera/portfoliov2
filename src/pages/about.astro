---
import Layout from "@/layouts/Layout.astro";
import Profile from "@/assets/imagen.svg";
import { language } from "@/utils/data";
import { socialLinks } from "@/utils/data";
import { studies } from "@/utils/data";
import { skills } from "@/utils/data";

---

<Layout title="Acerca de mí | Portfolio">
    <section class="py-8 md:py-24 px-6 md:px-12 lg:px-48">
        <div class="min-h-screen flex flex-col md:flex-row">
            <!-- Columna Izquierda - Avatar y Datos -->
            <div class="flex flex-col items-center md:w-1/3 mb-10 md:mb-0">
                <div
                    class="w-42 h-42 overflow-hidden rounded-full border-4 border-white/10 mb-6"
                >
                    <img
                        src={Profile.src}
                        alt="Miller Mosquera"
                        class="w-full h-full object-cover"
                    />
                </div>

                <div class="items-center">
                    <p class="text-2xl mb-2">Ingeniero de Sistemas</p>
                    <span class="flex justify-center mb-6">Colombia/Cali</span>
                </div>

                <div class="flex space-x-2 text-sm">
                    <p class="flex gap-6 flex-wrap">
                        {
                            language.map((lang) => (
                                <span class="px-3 py-1 bg-white-200 rounded-md border border-white/10 shadow-xl shadow-black/25 backdrop-blur-[-10px]">
                                    {lang.text}
                                </span>
                            ))
                        }
                    </p>
                </div>
            </div>

            <!-- Columna Derecha - Información -->
            <div class="md:w-2/3 md:pl-10 py-14">
                <!-- Título -->
                <h1 class="text-5xl font-bold mb-1">Miller Mosquera</h1>
                <p class="text-gray-500 mb-4 text-2xl">Backend Dev</p>
                <div class="flex space-x-2 mb-6">
                    {
                        socialLinks.map((link) => (
                            <a
                                href={link.url}
                                class="py-1 px-3 flex from-white/10 to-transparent border border-white/10 shadow-xl shadow-black/25 duration-500 rounded-[10px] backdrop-blur-[10px] "
                            >
                                <img
                                    src={link.image}
                                    alt={link.text}
                                    class="w-4 h-4 mr-2 mt-1"
                                />
                                {link.text}
                            </a>
                        ))
                    }
                </div>

                <!-- Descripción -->
                <p class="text-lg mb-16">
                    XXXXXXXXX.
                </p>

