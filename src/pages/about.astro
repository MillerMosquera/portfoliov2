                <!-- Educación -->
                <div>
                    <h2 class="text-3xl font-bold mb-8">Educación</h2>
                    <div class="">
                        {
                            studies.map((study) => (
                                <div class="flex justify-between items-center mb-4">
                                    <div class="flex flex-col">
                                        <h3 class="text-xl font-bold">
                                            {study.institution}
                                        </h3>
                                        <span class="text-[#8dc7b7]">
                                            {study.degree}
                                        </span>
                                    </div>
                                    <span class="text-sm mb-6">
                                        {study.duration}
                                    </span>
                                </div>
                            ))
                        }
                    </div>
